// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  excerpt      String
  date         DateTime @default(now())
  image        String?
  featuredImage String?
  author       String
  category     String
  readingTime  String
  locale       String   @default("en") // "en" or "es"
  published    Boolean  @default(false)
  contentBlocks Json     // Array of content blocks for flexible design
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([slug])
  @@index([locale])
  @@index([published])
  @@index([category])
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  password      String   // Hashed password
  role          String   @default("admin") // "admin" or "editor"
  sessions      Session[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  sessionToken String @unique
  userId    String
  expires   DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model PageComment {
  id              String                 @id @default(cuid())
  pageId          String
  elementId       String
  elementLabel    String?
  firstName       String
  lastName        String
  body            String
  linkUrl         String?
  status          String                 @default("pending")
  createdByUserId String?
  updatedByUserId String?
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  revisions       PageCommentRevision[]

  @@index([pageId])
  @@index([pageId, elementId])
  @@index([status])
}

model PageCommentRevision {
  id                String   @id @default(cuid())
  commentId         String
  previousBody      String
  previousLinkUrl   String?
  previousStatus    String?
  statusNote        String?
  editedByUserId    String?
  editedByName      String?
  editedAt          DateTime @default(now())
  comment           PageComment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@index([commentId])
  @@index([editedAt])
}

